{{ if eq .chezmoi.os "darwin" -}}
[credential]
	helper = osxkeychain
[credential "https://github.com"]
	helper = !op plugin run -- gh auth git-credential
[credential "https://gist.github.com"]
	helper = !op plugin run -- gh auth git-credential
{{ else if eq .chezmoi.os "linux" -}}
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
{{ end -}}
